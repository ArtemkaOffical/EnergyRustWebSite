
@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var user = UserManager.GetUserAsync(User).Result;    
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Account" asp-page="/Manage/Index" title="Manage">@user.UserName - @user.Balance RUB</a>
    </li>
    
}
else
{
    <li class="nav-item">
            <a asp-area="Account" asp-page="/Login" class="nav-link text-dark">Войти</a>
        </li>
    
}
</ul>
